<section class="grid">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<a href="{{ post.url | url }}">
			<div>
				{% if post.data.image %}
					<img src="{{ post.data.image }}">
				{% endif %}
			</div>
			<div>
				<h4>
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</h4>
			</div>
			</a>
		</article>
	{% endfor %}
</section>


