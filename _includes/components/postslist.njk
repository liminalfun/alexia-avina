<section class="grid">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<a href="{{ post.url | url }}">
			<div>
				{% if post.data.image %}
					<img src="{{ post.data.image }}">
				{% endif %}
			</div>
			<div>
				<h3>
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</h3>
				{% if post.data.tags %}
					<p>
						{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
						{%- endif -%}
						{% endfor %}
					</p>
				{% endif %}
			</div>
			</a>
		</article>
	{% endfor %}
</section>
