<section class="accordion-wrapper">
	{% for lyrics in lyricAccordion %}
  <button class="accordion">
    {% if lyrics.songtitle %}
		  {{ lyrics.songtitle }}
    {% endif %}
  </button>
  <div class="panel">
    <p>
        {% if lyrics.body %}
					{{ lyrics.body | safe }}
				{% endif %}
    </p>
  </div>
	{% endfor %}
</section>

  {% set js %}
    {% include "assets/js/accordion.js" %}
  {% endset %}
  <script>{{ js | jsmin | safe }}</script> 